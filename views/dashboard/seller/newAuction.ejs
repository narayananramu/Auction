<%layout('layout.ejs')%>
<script src="/js/newAuction.js"></script>
<div class="container">
    <h2>New Auction</h2><br/><br/>
    <form method="post" action="/newAuction">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <input type="hidden" name="itemUniqueID" id="uid" value="<%= uid %>" />
        <div class="form-group row">
            <div class="col-sm-3">
                <label>Item</label>
            </div>
            <div class="col-sm-5">
                <input class="form-control" type="text" placeholder="Item Name" name="itemName"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label>Item Description</label>
            </div>
            <div class="col-sm-5">
                <textarea class="form-control" rows="3" name="itemDesc"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label>Starting Bid Price</label>
            </div>
            <div class="col-sm-5">
                <div class="input-group">
                    <div class="input-group-addon">â‚¹</div>
                    <input type="text" class="form-control" name="itemPrice" placeholder="Amount in INR">
                    <div class="input-group-addon">.00</div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label>Bid Start Date and Time</label>
            </div>
            <div class="col-sm-5">
                <div class="input-group date" id="itemStart">
                    <input class="form-control" type="text" placeholder="Bid Start Time" name="itemStart"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <label>Bid End Date and Time</label>
            </div>
            <div class="col-sm-5">
                <div class="input-group date" id="itemEnd">
                    <input class="form-control" type="text" placeholder="Bid End Time" name="itemEnd"/>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-8">
                <button class="btn btn-primary pull-right" id="submit">Publish Auction</button>
            </div>
        </div>
    </form>
</div>